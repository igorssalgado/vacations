<p style="color: green"><%= notice %></p>
<div class="p-1 m-1 rounded-3" style="background-color: lightblue">
  <div class="container-fluid">
    <%= form_with(model: vacation) do |form| %>
      <% if vacation.errors.any? %>
        <div style="color: red">
          <h2><%= pluralize(vacation.errors.count, "error") %> prohibited this vacation from being saved:</h2>

        <ul>
          <% vacation.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group input-group" style="display: flex; justify-content: space-between" >
      <%= form.text_field :first_name, class: "form-control", id: "autoSizingInput", placeholder: "First name"  %>
      <%= form.text_field :last_name, class: "form-control", id: "autoSizingInput", placeholder: "Last name"  %>
    </div> 

    <%= form.text_field :email, class: "form-control ", id: "autoSizingInput", placeholder: "example@email.com"  %>
    <div class="input-group">
      <div class="input-group-text">Days</div>
      <%= form.number_field :vacation_days, class: "form-control", id: "autoSizingInputGroup", placeholder: "5-30" %>
    </div>

    <div class="form-group">
      <div class="input-group">
        <div class="input-group-text">Starting Date</div>
         <%= form.date_field :starting_date, class: "form-control"  %>
      </div> 
      <%# <%= form.label :ending_date, style: "display: block" %>
      <%# <%= form.date_field :ending_date %>
    </div>
   
    <div class="form-group" style="display: flex">
       Bonus:  <%= form.check_box :bonus %>
    </div>

    <div class="form-group">
      <%= form.submit class: 'btn btn-secondary btn-sm' %>
    </div>
    <% end %>
  </div>
</div>


